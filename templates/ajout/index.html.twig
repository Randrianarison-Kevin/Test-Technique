{% extends 'base.html.twig' %}

{% block title %}Hello AjoutController!{% endblock %}

{% block body %}
<div class="container">
    {{ form_start(form) }}
    <div style ="margin-left: 25%;">
        {{ form_widget(form) }}
    </div>
    {{ form_end(form) }}
</div>
<style>
    label {
        display: block;
        margin-bottom: .5rem;
        color: #495057;
        font-weight: bold;
    }
    input 
    {
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ced4da;
        border-radius: 4px;
        font-size: 16px;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
    }
    input[type="submit"],
    button {
        padding: 10px 20px;
        margin-bottom: 15px;
        border: none;
        border-radius: 4px;
        color: #fff;
        background-color: #082039;
        cursor: pointer;
    }
</style>
{% endblock %}
